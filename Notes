	public void syncWait(int t) {
		
		synchronized(driver) { 
			try {
				driver.wait(t);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
	}
	
	By.xpath("//a[contains(@class,'s-is-active')]")